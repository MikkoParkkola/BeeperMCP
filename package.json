{
  "name": "beeper-mcp",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build": "tsc -b && cp mcp-tools.js dist/",
    "lint": "eslint .",
    "format": "prettier --check .",
    "start": "node dist/beeper-mcp-server.js",
    "test": "node --test",
    "test:coverage": "c8 --check-coverage --lines 80 --branches 80 --functions 80 --exclude setup.js npm test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^22.5.2",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "c8": "^10.1.3",
    "eslint": "^9.33.0",
    "globals": "^16.3.0",
    "husky": "^9.0.0",
    "prettier": "^3.2.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@matrix-org/matrix-sdk-crypto-nodejs": "0.4.0-beta.1",
    "@matrix-org/olm": "^3.2.15",
    "@modelcontextprotocol/sdk": "^1.17.2",
    "better-sqlite3": "^12.2.0",
    "dotenv": "^16.4.5",
    "luxon": "^3.7.1",
    "matrix-js-sdk": "^31.0.1",
    "pino": "^9.4.0",
    "zod": "^3.23.8"
  }
}
{
  "name": "mcp-matrix-analytics",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.18"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "node --enable-source-maps --loader ts-node/esm src/mcp/server.ts",
