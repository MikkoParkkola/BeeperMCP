    "test": "vitest run"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@modelcontextprotocol/sdk-http": "^1.0.0",
    "ajv": "^8.17.1",
    "fasttext-node": "^0.4.4",
    "hnswlib-node": "^1.6.2",
    "luxon": "^3.5.0",
    "onnxruntime-node": "^1.18.0",
    "pg": "^8.12.0",
    "zod": "^3.23.8"
  },
  "optionalDependencies": {
    "pgvector": "^0.1.7",
    "cross-encoder": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  }
}
