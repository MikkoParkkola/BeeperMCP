MATRIX_HOMESERVER="https://matrix.example.com"
MATRIX_USERID="@user:example.com"
# Either MATRIX_TOKEN or MATRIX_PASSWORD is required
MATRIX_TOKEN="" # e.g. syt_xxx
# MATRIX_PASSWORD=""
MESSAGE_LOG_DIR="room-logs"
MATRIX_CACHE_DIR="mx-cache"
# Optional: SQLite database path for indexed logs
# LOG_DB_PATH="room-logs/messages.db"
# Log verbosity (trace, debug, info, warn, error)
LOG_LEVEL="info"
# Limit concurrent backfill requests
BACKFILL_CONCURRENCY="5"
# Key backup recovery key
# KEY_BACKUP_RECOVERY_KEY=""
# Interval (ms) to retry missing-room-key requests
KEY_REQUEST_INTERVAL_MS="1000"
# Maximum retry interval (ms)
KEY_REQUEST_MAX_INTERVAL_MS="300000"
# MSC feature flags
# MSC4190="true"
# MSC3202="true"
# Test mode: restrict sync to a room and event count
# TEST_ROOM_ID=""
# TEST_LIMIT="0"
# Optional: encrypt session cache and logs
SESSION_SECRET=""
LOG_SECRET=""
# Optional: require API key for MCP tools
# MCP_API_KEY=""
# Optional: encrypt downloaded media files
MEDIA_SECRET=""
# Optional: limit log size in bytes before rotation
LOG_MAX_BYTES="5000000"
# Uncomment to allow the `send_message` tool
# ENABLE_SEND_MESSAGE="1"
