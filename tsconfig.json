{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "tests/**/*.ts",
    "beeper-mcp-server.ts",
    "phased-setup.ts",
    "mcp-tools.d.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
